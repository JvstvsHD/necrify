{
  "baseBranches": [
    "master"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": "patch",
      "automerge": true
    },
    {
      "groupName": "jackson",
      "automerge": true,
      "matchPackageNames": [
        "/com.fasterxml.jackson.*/"
      ]
    }
  ]
}
